<h1> New Game</h1>

<div class="container">
  <% @letters.each do |letter| %>
    <div class="letter"> <%= letter.capitalize %> </div>
  <% end %>
</div>
<p>What is the longest word you can find?</p>


<form action="/score" method="post" class="form-inline">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <div class="container">
    <div class="form-group">
      <input type="text" name="word" id="word-form" autofocus>
      <input id="letters" name="letters" type="hidden" value= <%= @letters.join %> />
    </div>
    <div>
      <button type="submit" class="btn-treehouse" id="submit">
        Submit
      </button>
    </div>
  </div>
</form>


